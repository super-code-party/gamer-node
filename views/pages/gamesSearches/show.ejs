<!DOCTYPE html>
<html lang="en">
<head>
    <%-include('../partials/head')%>
</head>

<body>

  <header>
    <h1>logo</h1>
    <h1>Game Node</h1>
    <h1>Game Node</h1>
  </header>

  <main>
    <section class="listOfSearchedGames">

      <% listOfVideoGames.forEach(videoGame => { %>  

        <p><%= videoGame.id; %></p>
        <p><%= videoGame.name; %></p>
        <p><%= videoGame.summary; %></p>
        <p><%= videoGame.category; %></p>
        <p><%= videoGame.release_date  %></p>
        
        <section class="videoGameDetails">
          <form action="gameSearches/detail" method="POST">
            <input type="text" name="title" value="<%= videoGame.name %>" required>
            <input type="text" name="summary" value="<%= videoGame.id %>" required>
            <button type="submit">See Game Details</button> 
          </form>
        </section>
      <% }) %>

    </section>
  </main>

  <footer>
      <%-include('../partials/footer')%>
  </footer>
  
</body>
</html>